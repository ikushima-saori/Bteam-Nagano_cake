<div class="container">
  <div class="row">
    <div class="col">
      <p>注文情報確認</p>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= @items_total_payment %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p>支払方法　<%= @order.payment_method_i18n %></p>
    </div>
  </div>
</div>