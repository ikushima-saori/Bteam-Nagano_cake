<div class="container">
  <div class="row-8 ml-4 mt-4">
    <div class="col-8">
      <h3>マイページ</h3>
    </div>
  </div>
  <div class="row mt-4 mb-4">
    <div class="col-2">
      <h4>登録情報</h4>
    </div>
    <div class="col">
      <%= link_to '編集する', edit_customers_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <tr>
          <td>氏名</td>
          <td><%= @customer.first_name %> <%= @customer.last_name %></td>
        </tr>

        <tr>
          <td>カナ</td>
          <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-2 mt-4">
      <h5><strong>配送先</strong></h5>
    </div>
    <div class="col mt-4">
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
    </div>
  </div><br>
  <div class="row">
    <div class="col-2 mt-4">
      <h5><strong>注文履歴</strong></h5>
    </div>
    <div class="col mt-4">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>