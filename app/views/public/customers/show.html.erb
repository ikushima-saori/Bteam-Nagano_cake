
<div class="container">
  <div class="row">
    <h1>マイページ</h1>
  </div>
  <div class="col-lg-4">
    <div class="col-md-12">
      <table class="table table-borderless">
        <tr>
          <td>
            <h5><strong>登録情報</strong></h5>
          </td>
          <td><%= link_to '編集する', edit_customers_path %></td>
        </tr>
      </table>
      
      <table class="table table-bordered">
        <tr>
          <td>氏名</td>
          <td><%= @customer.first_name %> <%= @customer.last_name %></td>
        </tr>
        
        <tr>
          <td>カナ</td>
          <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
        </tr>
        
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      
      <table class="table table-borderless">
        <tr>
          <td>
            <h5><strong>配送先</strong></h5>
          </td>
          <td><%= link_to "一覧を見る", addresses_path %></td>
        </tr>
        
        <tr>
          <td>
            <h5><strong>注文履歴</strong></h5>
          </td>
          <td><%= link_to "一覧を見る", orders_path %></td>
        </tr>
      </table>
    </div>
  </div>
</div>









