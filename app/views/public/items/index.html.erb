<div class='container px-5 px-sm-0 my-5'>
  <div class='row'>



    <div class='col-md-8 offset-md-1'>
      <h3 class="font-weight-bold my-3">商品一覧

      </h3>

      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 mb-4">
            <div class="card">
              <%= image_tag item.get_item_image(300, 300) %>
              <%= link_to item_path(item)  %>
                <div class="card-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text"><%= item.price %>円</p>
                </div>

            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>