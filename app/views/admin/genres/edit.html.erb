<div class="container">
  <% if @genre.errors.any? %>
    <div class="row">
      <div class="col">
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row py-4">
    <div class="col-3">
      <h4 style="text-align:center; background-color: whitesmoke">ジャンル編集</h4>
    </div>
  </div>
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="row py-4">
      <div class="col-2">
          <%= f.label :ジャンル名 %>
      </div>
      <div class="col-3">
          <%= f.text_field :name %></div>
      <div class="col-1"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>

