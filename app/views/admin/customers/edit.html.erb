<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-3 bg-secondary text-white "><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
      <table class="table table-borderless">
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
          <td></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %>      <%= f.text_field :first_name %></td>
          <td></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %>     <%= f.text_field :first_name_kana %></td>
          <td></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :post_code %></td>
          <td></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size: 50 %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email %></td>
          <td></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", { value: :true } %>
            
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", { value: :false } %>
          </td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存する" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>