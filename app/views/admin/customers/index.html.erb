<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col my-3 ml-5">
      <h4>
        <span class="bg-light text-black">
          会員一覧
        </span>
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.customer_status %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <span class="d-flex justify-content-center"><%= paginate @customers %></span>
    </div>
    <div class="col-2"></div>
  </div>
</div>