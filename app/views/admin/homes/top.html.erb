<div class="container">
  <div class="row">
    <div class="col my-4">
      <h4>
        <span class="bg-secondary text-white">注文履歴一覧</span>
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>注文日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
            <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= I18n.t("enums.order.statuses.#{order.status}") %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
